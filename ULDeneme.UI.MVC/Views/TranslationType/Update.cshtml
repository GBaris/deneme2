@model ULDeneme.ViewModel.TranslationTypeViewModels.TranslationTypeEditVM
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using ULDeneme.Model.Enums

@using (Html.BeginForm("Update", "TranslationType", FormMethod.Post, new { id = "updateForm" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.UnknownLang)
        @Html.TextBoxFor(x => x.UnknownLang, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UnknownLang)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.KnownLang)
        @Html.TextBoxFor(x => x.KnownLang, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KnownLang)
    </div>
    @Html.HiddenFor(x => x.ID)
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <button onclick="closeUpdateView()" class="btn btn-danger">Cancel</button>
    </div>
}
<script>
    function closeUpdateView() {
        $('#updateForm')[0].reset();
        $('#updateView').hide();
    }
</script>
