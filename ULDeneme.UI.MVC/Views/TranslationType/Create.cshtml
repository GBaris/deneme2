@model ULDeneme.ViewModel.TranslationTypeViewModels.TranslationTypeCreateVM
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using ULDeneme.Model.Enums

@using (Html.BeginForm("Create", "TranslationType", new { @Method = "Post" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.UnknownLang)
        @Html.TextBoxFor(x => x.UnknownLang, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UnknownLang)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.KnownLang)
        @Html.TextBoxFor(x => x.KnownLang, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KnownLang)
    </div>
    <input type="hidden" name="UserID" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" />
    <input type="hidden" name="UserRole" value="@User.FindFirst(ClaimTypes.Role).Value" />
    <div class="form-group">
        <input type="submit" value="Create New" class="btn btn-success" />
    </div>
}